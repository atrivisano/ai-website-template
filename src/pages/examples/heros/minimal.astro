---
// src/pages/hero-examples/minimal.astro
import BaseLayout from '../../../layouts/Layout.astro';
import Header from '../../../components/common/Header.astro';
import Footer from '../../../components/common/Footer.astro';
import Hero from '../../../components/sections/Hero.astro';
---

<BaseLayout title="Minimal Hero Example">
    <Header slot="header" />

    <Hero
        title="Contact Us"
        description="Have questions? We're here to help you with anything you need."
        height="small"
    />

    <section class="py-16">
        <div class="container-custom">
            <h2 class="text-3xl font-bold mb-6">Minimal Hero Example</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-8">
                This example demonstrates a minimal hero section with just a title and description.
                It uses a smaller height setting, making it perfect for secondary pages like contact, about, or support pages.
            </p>

            <div class="bg-gray-100 dark:bg-gray-800 p-6 rounded-lg">
                <h3 class="text-xl font-semibold mb-4">Key Features:</h3>
                <ul class="list-disc pl-5 space-y-2 text-gray-600 dark:text-gray-400">
                    <li>Simplified layout with only essential elements</li>
                    <li>Reduced height for secondary pages</li>
                    <li>Clean, focused messaging</li>
                    <li>No buttons or CTAs for distraction-free content</li>
                </ul>
            </div>
        </div>
    </section>

    <Footer slot="footer" />
</BaseLayout>