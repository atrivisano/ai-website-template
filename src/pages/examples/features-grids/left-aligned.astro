---
// src/pages/features-grid-examples/left-aligned.astro
import BaseLayout from '../../../layouts/Layout.astro';
import Header from '../../../components/common/Header.astro';
import Footer from '../../../components/common/Footer.astro';
import Hero from '../../../components/sections/Hero.astro';
import FeaturesGrid from '../../../components/sections/FeaturesGrid.astro';

// Sample feature data
const features = [
    {
        title: "Tailwind Integration",
        description: "Fully integrated with Tailwind CSS for rapid development using utility classes instead of writing custom CSS.",
        icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" /></svg>',
        link: {
            text: "Read Tailwind documentation",
            url: "/tailwind"
        }
    },
    {
        title: "Dark Mode Support",
        description: "Built-in dark mode that respects user preferences and allows for easy toggling between light and dark themes.",
        icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" /></svg>',
        link: {
            text: "Learn about theming",
            url: "/dark-mode"
        }
    },
    {
        title: "Responsive By Default",
        description: "Every component is designed to work seamlessly across all device sizes, from mobile phones to widescreen displays.",
        icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" /></svg>',
        link: {
            text: "View responsive design guide",
            url: "/responsive"
        }
    },
    {
        title: "SEO Optimized",
        description: "Built with search engines in mind, including semantic HTML, optimized meta tags, and excellent Lighthouse scores.",
        icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>',
        link: {
            text: "Improve your SEO",
            url: "/seo"
        }
    },
]
---

<BaseLayout title="Left-Aligned Features Grid Example">
    <Header slot="header" />

    <Hero
        title="Left-Aligned Features Grid"
        subtitle="Component Example"
        description="A 2-column layout with left-aligned text for more detailed descriptions."
        height="small"
        align="left"
    />

    <!-- Example Features Grid -->
    <FeaturesGrid
        title="Core Features"
        description="Our platform provides everything you need to build, deploy, and scale your web applications."
        features={features}
        columns={2}
        align="left"
        withBackground={false}
    />

    <section class="py-16">
        <div class="container-custom">
            <h2 class="text-3xl font-bold mb-6">About This Example</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-8">
                This page demonstrates a left-aligned 2-column layout of the Features Grid component.
                This configuration is ideal for feature lists with longer descriptions or when you want to emphasize
                the textual content.
            </p>

            <div class="bg-gray-100 dark:bg-gray-800 p-6 rounded-lg">
                <h3 class="text-xl font-semibold mb-4">Key Characteristics:</h3>
                <ul class="list-disc pl-5 space-y-2 text-gray-600 dark:text-gray-400">
                    <li>2-column grid layout that provides more horizontal space for content</li>
                    <li>Left-aligned text for easier reading of longer descriptions</li>
                    <li>No background color on the section (more minimal look)</li>
                    <li>Each feature includes a link for further reading</li>
                    <li>Simple section header with just title and description (no subtitle)</li>
                </ul>
            </div>

            <div class="mt-10">
                <h3 class="text-xl font-semibold mb-4">Component Code Example:</h3>
                <pre class="bg-gray-800 text-gray-200 p-4 rounded-lg overflow-x-auto text-sm">
{`<FeaturesGrid
    title="Core Features"
    description="Our platform provides everything you need to build..."
    features={features}
    columns={2}
    align="left"
    withBackground={false}
/>`}
                </pre>
            </div>
        </div>
    </section>

    <section class="py-8">
        <div class="container-custom">
            <div class="flex justify-between items-center">
                <a href="/features-grid-examples/standard" class="inline-flex items-center text-blue-600 dark:text-blue-400 font-medium">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                    </svg>
                    Previous: Standard Layout
                </a>
                <a href="/features-grid-examples/compact" class="inline-flex items-center text-blue-600 dark:text-blue-400 font-medium">
                    Next Example: Compact Layout
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                </a>
            </div>
        </div>
    </section>

    <Footer slot="footer" />
</BaseLayout>