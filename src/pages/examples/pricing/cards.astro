---
// src/pages/examples/pricing/cards.astro
import BaseLayout from '../../../layouts/Layout.astro';
import Header from '../../../components/common/Header.astro';
import Footer from '../../../components/common/Footer.astro';
import Hero from '../../../components/sections/Hero.astro';
import Pricing from '../../../components/sections/Pricing.astro';

// Sample pricing data for modern cards layout
const pricingTiers = [
    {
        name: "Freelancer",
        description: "For independent professionals and small teams",
        badge: "New",
        price: {
            monthly: 19,
            annual: 15.2,  // 20% discount
        },
        features: [
            {text: "3 team members", included: true},
            {text: "20GB storage", included: true},
            {text: "5 projects", included: true},
            {text: "Basic analytics", included: true},
            {text: "48-hour support", included: true},
            {text: "API access", included: false},
            {text: "Advanced security", included: false},
        ],
        cta: {
            text: "Start Free Trial",
            href: "/trial?plan=freelancer",
        },
    },
    {
        name: "Agency",
        description: "For growing agencies and businesses",
        price: {
            monthly: 49,
            annual: 39.2,  // 20% discount
        },
        features: [
            {text: "10 team members", included: true},
            {text: "100GB storage", included: true},
            {text: "Unlimited projects", included: true},
            {text: "Advanced analytics", included: true},
            {text: "24-hour support", included: true},
            {text: "API access", included: true},
            {text: "Advanced security", included: false},
        ],
        cta: {
            text: "Start Free Trial",
            href: "/trial?plan=agency",
        },
        isPopular: true,
    },
    {
        name: "Enterprise",
        description: "For large teams and organizations",
        price: {
            monthly: 99,
            annual: 79.2,  // 20% discount
        },
        features: [
            {text: "Unlimited team members", included: true},
            {text: "1TB storage", included: true},
            {text: "Unlimited projects", included: true},
            {text: "Custom analytics", included: true},
            {text: "1-hour support", included: true},
            {text: "API access", included: true},
            {text: "Advanced security", included: true},
        ],
        cta: {
            text: "Contact Sales",
            href: "/contact",
        },
    },
];
---

<BaseLayout title="Modern Pricing Cards Example">
    <Header slot="header"/>

    <Hero
        title="Modern Pricing Cards"
        subtitle="Component Example"
        description="Visually appealing pricing cards with hover effects and gradients."
        height="small"
    />

    <!-- Example Modern Pricing Cards -->
    <Pricing
        title="Plans for every scale"
        description="Whether you're just starting out or scaling up, we have a plan that fits your needs."
        tiers={pricingTiers}
        style="cards"
        enableToggle={true}
        withBackground={false}
    />

    <section class="py-16">
        <div class="container-custom">
            <h2 class="text-3xl font-bold mb-6">About This Example</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-8">
                This page demonstrates a modern card-based pricing layout with enhanced visual styling and interactive
                hover effects. This approach creates a more engaging presentation that draws attention to your pricing
                options.
            </p>

            <div class="bg-gray-100 dark:bg-gray-800 p-6 rounded-lg">
                <h3 class="text-xl font-semibold mb-4">Key Features:</h3>
                <ul class="list-disc pl-5 space-y-2 text-gray-600 dark:text-gray-400">
                    <li>Visually striking cards with gradient backgrounds</li>
                    <li>Interactive hover effects for engagement</li>
                    <li>High-contrast design for the popular plan</li>
                    <li>Monthly/annual billing toggle</li>
                    <li>Clean feature lists with visual indicators</li>
                    <li>Responsive design that stacks on mobile</li>
                </ul>
            </div>

            <div class="mt-10">
                <h3 class="text-xl font-semibold mb-4">Component Code Example:</h3>
                <pre class="bg-gray-800 text-gray-200 p-4 rounded-lg overflow-x-auto text-sm">
{`<Pricing
    title="Plans for every scale"
    description="Whether you're just starting out or scaling up, we have a plan that fits your needs."
    tiers={pricingTiers}
    style="cards"
    enableToggle={true}
    withBackground={false}
/>`}
                </pre>
            </div>

            <div class="mt-8 p-4 bg-blue-50 dark:bg-blue-900/30 rounded-lg border border-blue-200 dark:border-blue-700">
                <p class="text-blue-800 dark:text-blue-200 text-sm">
                    <strong>Best Practice:</strong> The modern card layout adds visual appeal through gradients and
                    hover effects. This approach is particularly effective for SaaS products, creative services, or any
                    brand that wants to project a contemporary, innovative image.
                </p>
            </div>

            <div
                class="mt-8 p-4 bg-green-50 dark:bg-green-900/30 rounded-lg border border-green-200 dark:border-green-700">
                <p class="text-green-800 dark:text-green-200 text-sm">
                    <strong>Design Tip:</strong> The elevated design of the popular plan with its gradient background
                    creates a natural focal point. This is reinforced by the lift effect on hover, which adds an
                    interactive element that enhances user engagement.
                </p>
            </div>
        </div>
    </section>

    <section class="py-8">
        <div class="container-custom">
            <div class="flex justify-between items-center">
                <a href="/examples/pricing/horizontal"
                   class="inline-flex items-center text-blue-600 dark:text-blue-400 font-medium">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20"
                         fill="currentColor">
                        <path fill-rule="evenodd"
                              d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
                              clip-rule="evenodd"/>
                    </svg>
                    Previous: Horizontal Pricing Table
                </a>
                <a href="/examples/pricing"
                   class="inline-flex items-center text-blue-600 dark:text-blue-400 font-medium">
                    Back to All Examples
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20"
                         fill="currentColor">
                        <path fill-rule="evenodd"
                              d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                              clip-rule="evenodd"/>
                    </svg>
                </a>
            </div>
        </div>
    </section>

    <Footer slot="footer"/>
</BaseLayout>